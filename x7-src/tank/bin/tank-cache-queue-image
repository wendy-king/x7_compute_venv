"""
CLI Utility to queue one or more images for prefetching into the image cache
"""

import gettext
import os
import sys

# If ../tank/__init__.py exists, add ../ to Python search path, so that
# it will override what happens to be installed in /usr/(local/)lib/python...
possible_topdir = os.path.normpath(os.path.join(os.path.abspath(sys.argv[0]),
                                   os.pardir,
                                   os.pardir))
if os.path.exists(os.path.join(possible_topdir, 'tank', '__init__.py')):
    sys.path.insert(0, possible_topdir)

gettext.install('tank', unicode=1)

from tank.common import config

USAGE = """
%%prog [OPTIONS] <IMAGE_ID1> [<IMAGE_ID2> ... <IMAGE_IDN>]
"""


if __name__ == '__main__':
    try:
        conf = config.TankCacheConfigOpts(usage=USAGE)
        args = conf()

        app = config.load_paste_app(conf, 'tank-queue-image')
        app.run(args)
    except RuntimeError, e:
        sys.exit("ERROR: %s" % e)
